{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "Cronjobs": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "EndDateCmd": {
                        "type": "string"
                    },
                    "Schedule": {
                        "type": "string"
                    },
                    "StartDateCmd": {
                        "type": "string"
                    }
                }
            }
        },
        "Flags": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "Installation": {
            "type": "object",
            "properties": {
                "V1": {
                    "type": "object",
                    "properties": {
                        "Registry": {
                            "type": "object",
                            "properties": {
                                "Domain": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            }
        },
        "Resources": {
            "type": "object",
            "properties": {
                "limits": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                },
                "requests": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "Secrets": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "data": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "key": {
                                    "type": "string"
                                },
                                "value": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "name": {
                        "type": "string"
                    }
                }
            }
        },
        "VolumeMounts": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "mountPath": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "subPath": {
                        "type": "string"
                    }
                }
            }
        },
        "Volumes": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "secret": {
                        "type": "object",
                        "properties": {
                            "items": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "key": {
                                            "type": "string"
                                        },
                                        "path": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                            "secretName": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "image": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "tag": {
                    "type": "null"
                }
            }
        }
    }
}
