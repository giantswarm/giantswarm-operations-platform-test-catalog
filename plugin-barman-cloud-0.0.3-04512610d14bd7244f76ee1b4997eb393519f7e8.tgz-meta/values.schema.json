{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "pluginbarmancloud": {
            "type": "object",
            "properties": {
                "certificate": {
                    "type": "object",
                    "properties": {
                        "createClientCertificate": {
                            "type": "boolean"
                        },
                        "createServerCertificate": {
                            "type": "boolean"
                        },
                        "duration": {
                            "type": "string"
                        },
                        "issuerName": {
                            "type": "string"
                        },
                        "renewBefore": {
                            "type": "string"
                        }
                    }
                },
                "commonAnnotations": {
                    "type": "object"
                },
                "containerSecurityContext": {
                    "type": "object",
                    "properties": {
                        "allowPrivilegeEscalation": {
                            "type": "boolean"
                        },
                        "capabilities": {
                            "type": "object",
                            "properties": {
                                "drop": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            }
                        },
                        "readOnlyRootFilesystem": {
                            "type": "boolean"
                        },
                        "runAsGroup": {
                            "type": "integer"
                        },
                        "runAsUser": {
                            "type": "integer"
                        },
                        "seccompProfile": {
                            "type": "object",
                            "properties": {
                                "type": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "crds": {
                    "type": "object",
                    "properties": {
                        "create": {
                            "type": "boolean"
                        }
                    }
                },
                "enabled": {
                    "type": "boolean"
                },
                "image": {
                    "type": "object",
                    "properties": {
                        "registry": {
                            "type": "string"
                        },
                        "repository": {
                            "type": "string"
                        }
                    }
                },
                "podAnnotations": {
                    "type": "object"
                },
                "podLabels": {
                    "type": "object"
                },
                "podSecurityContext": {
                    "type": "object",
                    "properties": {
                        "runAsNonRoot": {
                            "type": "boolean"
                        },
                        "seccompProfile": {
                            "type": "object",
                            "properties": {
                                "type": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "rbac": {
                    "type": "object",
                    "properties": {
                        "create": {
                            "type": "boolean"
                        }
                    }
                },
                "resources": {
                    "type": "object"
                },
                "serviceAccount": {
                    "type": "object",
                    "properties": {
                        "create": {
                            "type": "boolean"
                        },
                        "name": {
                            "type": "string"
                        }
                    }
                },
                "sidecarImage": {
                    "type": "object",
                    "properties": {
                        "registry": {
                            "type": "string"
                        },
                        "repository": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
