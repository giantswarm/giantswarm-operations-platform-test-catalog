{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "global": {
            "type": "object",
            "properties": {
                "podSecurityStandards": {
                    "type": "object",
                    "properties": {
                        "enforced": {
                            "type": "boolean"
                        }
                    }
                }
            }
        },
        "image": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "registry": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "ingress": {
            "type": "object",
            "properties": {
                "annotations": {
                    "type": "object",
                    "properties": {
                        "cert-manager.io/cluster-issuer": {
                            "type": "string"
                        },
                        "kubernetes.io/tls-acme": {
                            "type": "string"
                        },
                        "nginx.ingress.kubernetes.io/force-ssl-redirect": {
                            "type": "string"
                        }
                    }
                },
                "hostnames": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "name": {
            "type": "string"
        },
        "namespace": {
            "type": "string"
        },
        "resources": {
            "type": "object",
            "properties": {
                "limits": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                },
                "requests": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "route": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "description": "Enable Gateway API HTTPRoute"
                },
                "kind": {
                    "type": "string",
                    "enum": ["GRPCRoute", "HTTPRoute", "TCPRoute", "TLSRoute", "UDPRoute"],
                    "description": "The kind of route to create"
                },
                "name": {
                    "type": "string",
                    "description": "Override the route name"
                },
                "annotations": {
                    "type": "object",
                    "description": "Additional annotations for the route"
                },
                "labels": {
                    "type": "object",
                    "description": "Additional labels for the route"
                },
                "hostnames": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Hostnames for the route"
                },
                "parentRefs": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": {
                                "type": "string"
                            },
                            "namespace": {
                                "type": "string"
                            },
                            "sectionName": {
                                "type": "string"
                            }
                        }
                    },
                    "description": "Parent references (Gateway) for the route"
                },
                "matches": {
                    "type": "array",
                    "items": {
                        "type": "object"
                    },
                    "description": "Matching rules for the route"
                },
                "filters": {
                    "type": "array",
                    "items": {
                        "type": "object"
                    },
                    "description": "Filters to apply to requests"
                },
                "additionalRules": {
                    "type": "array",
                    "items": {
                        "type": "object"
                    },
                    "description": "Additional custom rules for the route"
                },
                "securityPolicy": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "description": "Enable SecurityPolicy for the route"
                        },
                        "annotations": {
                            "type": "object",
                            "description": "Additional annotations for SecurityPolicy"
                        },
                        "labels": {
                            "type": "object",
                            "description": "Additional labels for SecurityPolicy"
                        },
                        "basicAuth": {
                            "type": "object",
                            "description": "Basic authentication configuration"
                        },
                        "cors": {
                            "type": "object",
                            "description": "CORS configuration"
                        },
                        "jwt": {
                            "type": "object",
                            "description": "JWT authentication configuration"
                        },
                        "oidc": {
                            "type": "object",
                            "description": "OIDC authentication configuration"
                        },
                        "extAuth": {
                            "type": "object",
                            "description": "External authentication configuration"
                        },
                        "authorization": {
                            "type": "object",
                            "description": "Authorization configuration"
                        }
                    },
                    "description": "Envoy Gateway SecurityPolicy configuration"
                }
            },
            "description": "Gateway API Route configuration"
        }
    }
}
