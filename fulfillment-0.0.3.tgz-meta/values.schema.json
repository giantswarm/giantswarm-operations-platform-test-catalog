{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "aws": {
            "type": "object",
            "properties": {
                "access_key_id": {
                    "type": "string"
                },
                "secret_access_key": {
                    "type": "string"
                }
            }
        },
        "ingress": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "annotations": {
                    "type": "object",
                    "properties": {
                        "cert-manager.io/cluster-issuer": {
                            "type": "string"
                        },
                        "kubernetes.io/tls-acme": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "route": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string"
                },
                "kind": {
                    "type": "string"
                },
                "annotations": {
                    "type": "object"
                },
                "labels": {
                    "type": "object"
                },
                "hostnames": {
                    "type": "array"
                },
                "parentRefs": {
                    "type": "array"
                },
                "matches": {
                    "type": "array"
                },
                "filters": {
                    "type": "array"
                },
                "additionalRules": {
                    "type": "array"
                },
                "securityPolicy": {
                    "type": "object",
                    "properties": {
                        "enabled": {
                            "type": "boolean"
                        },
                        "labels": {
                            "type": "object"
                        },
                        "annotations": {
                            "type": "object"
                        },
                        "basicAuth": {
                            "type": "object"
                        },
                        "cors": {
                            "type": "object"
                        },
                        "jwt": {
                            "type": "object"
                        },
                        "oidc": {
                            "type": "object"
                        },
                        "extAuth": {
                            "type": "object"
                        },
                        "authorization": {
                            "type": "object"
                        }
                    }
                }
            }
        },
        "slack": {
            "type": "object",
            "properties": {
                "token": {
                    "type": "string"
                }
            }
        }
    }
}
